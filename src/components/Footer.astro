---
import SocialMedia from './SocialMedia.astro';
const currentYear = new Date().getFullYear();

const businessHours = [
  { day: 'Maandag t/m vrijdag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Zaterdag & Zondag', hours: 'Gesloten' }
];

const certifications = [
  { name: 'KOMO', description: 'Gecertificeerde kwaliteit' },
  { name: 'SKH', description: 'Hout expertise' },
  { name: 'FSC', description: 'Duurzaam bosbeheer' }
];
---

<footer class="relative bg-[#0089a6] text-white pt-16 pb-8 overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-24 -right-24 w-96 h-96 bg-accent-500/10 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-white/10 rounded-full blur-3xl"></div>
  </div>

  <div class="container relative mx-auto px-4">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
      <!-- Contact Information -->
      <div class="space-y-6">
        <div>
          <h3 class="text-2xl font-bold font-montreal mb-4 text-white/90">Contact</h3>
          <div class="space-y-4">
            <p class="font-semibold text-lg text-white/90">R.VAN TILBURG KOZIJNEN</p>
            <a href="https://maps.google.com/?q=Putsmolentje+7,+4641+SK+Ossendrecht" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="flex items-center gap-3 text-white/80 hover:text-white transition-colors group">
              <div class="p-2 bg-primary-700/50 rounded-lg group-hover:bg-primary-600/50 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span>Putsmolentje 7, 4641 SK Ossendrecht</span>
            </a>
            <a href="tel:0164672085" 
               class="flex items-center gap-3 text-white/80 hover:text-white transition-colors group">
              <div class="p-2 bg-primary-700/50 rounded-lg group-hover:bg-primary-600/50 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <span>0164 672 085</span>
            </a>
            <a href="mailto:info@vantilburgkozijnen.nl" 
               class="flex items-center gap-3 text-white/80 hover:text-white transition-colors group">
              <div class="p-2 bg-primary-700/50 rounded-lg group-hover:bg-primary-600/50 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span>info@vantilburgkozijnen.nl</span>
            </a>
          </div>
        </div>
        <div>
          <SocialMedia class="text-white/80 [&_a:hover]:text-white [&_a]:transition-colors" />
        </div>
      </div>

      <!-- Opening Hours -->
      <div class="space-y-6">
        <h3 class="text-2xl font-bold font-montreal mb-4 text-white/90">Openingstijden</h3>
        <div class="space-y-4">
          {businessHours.map(({ day, hours }) => (
            <div class="group p-4 bg-primary-700/20 rounded-lg hover:bg-primary-700/30 transition-colors">
              <div class="flex flex-col gap-1">
                <span class="font-medium text-white/90">{day}</span>
                <span class="text-white/70">{hours}</span>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Certifications -->
      <div class="space-y-6">
        <h3 class="text-2xl font-bold font-montreal mb-4 text-white/90">Certificeringen</h3>
        <div class="grid grid-cols-1 gap-4">
          {certifications.map(({ name, description }) => (
            <div class="p-4 bg-primary-700/20 rounded-lg border border-primary-600/20 hover:border-primary-600/40 transition-colors">
              <div class="flex flex-col gap-1">
                <span class="font-medium text-white/90">{name}</span>
                <span class="text-white/70">{description}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Links -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 py-8 border-t border-primary-700/30">
      <div class="flex flex-wrap gap-4 justify-center md:justify-start text-sm text-white/60">
        <a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
        <a href="/cookies" class="hover:text-white transition-colors">Cookies</a>
        <a href="/voorwaarden" class="hover:text-white transition-colors">Algemene voorwaarden</a>
      </div>
      <div class="text-center md:text-right text-sm text-white/60">
        &copy; {currentYear} R.VAN TILBURG KOZIJNEN. Alle rechten voorbehouden.
      </div>
    </div>
  </div>
</footer>

<style>
  @keyframes glow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
</style>

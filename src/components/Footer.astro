---
import SocialMedia from './SocialMedia.astro';
const currentYear = new Date().getFullYear();

const businessHours = [
  { day: 'Maandag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Dinsdag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Woensdag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Donderdag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Vrijdag', hours: '07:30 - 12:20, 13:00 - 17:00' },
  { day: 'Zaterdag', hours: 'Gesloten' },
  { day: 'Zondag', hours: 'Gesloten' },
];
---

<footer class="bg-primary-600 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8 mb-8">
      <!-- Contact Information -->
      <div class="space-y-4">
        <h3 class="text-xl font-bold">Contact</h3>
        <div class="space-y-2">
          <p class="font-semibold">R.VAN TILBURG KOZIJNEN</p>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <p>Putsmolentje 7, 4641 SK Ossendrecht</p>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:0164672085" class="hover:text-accent-300 transition-colors">0164 672 085</a>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@vantilburgkozijnen.nl" class="hover:text-accent-300 transition-colors">info@vantilburgkozijnen.nl</a>
          </div>
        </div>
        <SocialMedia class="text-white [&_a:hover]:text-accent-300" />
      </div>

      <!-- Opening Hours -->
      <div class="space-y-4">
        <h3 class="text-xl font-bold">Openingstijden</h3>
        <div class="space-y-2">
          {businessHours.map(({ day, hours }) => (
            <div class="flex justify-between">
              <span>{day}</span>
              <span class="text-primary-200">{hours}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Quick Links -->
      <div class="space-y-4">
        <h3 class="text-xl font-bold">Diensten</h3>
        <ul class="space-y-2">
          <li><a href="#services" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Kozijnen
          </a></li>
          <li><a href="#services" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Deuren
          </a></li>
          <li><a href="#services" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Schuifpuien
          </a></li>
        </ul>

        <h3 class="text-xl font-bold pt-4">Informatie</h3>
        <ul class="space-y-2">
          <li><a href="/privacy" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Privacybeleid
          </a></li>
          <li><a href="/algemene-voorwaarden" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Algemene voorwaarden
          </a></li>
          <li><a href="/contact" class="hover:text-accent-300 transition-colors inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            Contact
          </a></li>
        </ul>
      </div>

      <!-- Map -->
      <div class="space-y-4">
        <h3 class="text-xl font-bold">Locatie</h3>
        <div class="w-full h-64 bg-primary-700 rounded-lg overflow-hidden">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2489.5657179674936!2d4.350388211546224!3d51.392659271669736!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c40dad31931b9b%3A0x9b873938c91cb962!2sDriehoeven%2C%20Putsmolentje%207%2C%204641%20SK%20Ossendrecht!5e0!3m2!1snl!2snl!4v1733425249615!5m2!1snl!2snl"
            width="100%"
            height="100%"
            style="border:0;"
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="pt-8 border-t border-primary-500/30 text-center text-sm text-primary-200">
      <p>&copy; {currentYear} R.VAN TILBURG KOZIJNEN. Alle rechten voorbehouden.</p>
    </div>
  </div>
</footer>

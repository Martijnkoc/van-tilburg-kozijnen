---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
const embedUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2093.4657722206257!2d4.349756743976111!3d51.39268365105116!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c40dad31931b9b%3A0x9b873938c91cb962!2sDriehoeven%2C%20Putsmolentje%207%2C%204641%20SK%20Ossendrecht!5e0!3m2!1snl!2snl!4v1740306687355!5m2!1snl!2snl";
---

<div class={`w-full h-[400px] rounded-lg overflow-hidden shadow-lg ${className}`}>
  <iframe 
    src={embedUrl}
    width="100%"
    height="100%"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"
    title="Driehoeven op Google Maps"
  />
</div>

<style>
  iframe {
    filter: grayscale(1) contrast(1.2);
    transition: filter 0.3s ease;
  }

  iframe:hover {
    filter: grayscale(0) contrast(1);
  }
</style>

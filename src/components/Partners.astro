---
interface Partner {
  name: string;
  logo: string;
  description: string;
  width?: string;
  altText: string;
}

const partners: Partner[] = [
  {
    logo: "/images/partners/accoya.svg",
    name: "Accoya",
    description: "Wereldleider in duurzaam gemodificeerd hout voor luxe kozijnen",
    altText: "Accoya logo - Duurzaam gemodificeerd hout voor luxe kozijnen"
  },
  {
    logo: "/images/partners/fsc.svg",
    name: "FSC",
    description: "Internationaal keurmerk voor verantwoord bosbeheer",
    altText: "FSC logo - Forest Stewardship Council keurmerk"
  },
  {
    logo: "/images/partners/komo-new.svg",
    name: "KOMO",
    description: "Onafhankelijk kwaliteitskeurmerk voor bouwproducten",
    width: "w-40",
    altText: "KOMO logo - Onafhankelijk kwaliteitskeurmerk voor kozijnen"
  },
  {
    logo: "/images/partners/bouwgarant.svg",
    name: "Bouwgarant",
    description: "Kwaliteitsgarantie voor verbouw en renovatie",
    width: "w-48",
    altText: "Bouwgarant logo - Kwaliteitsgarantie voor verbouw en renovatie"
  }
];
---

<section class="py-24 bg-gray-50/50">
  <div class="container mx-auto px-4">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-6 font-montreal">
        Onze Partners
      </h2>
      <p class="text-lg text-gray-600 font-commons">
        Wij werken samen met toonaangevende merken en zijn KOMO gecertificeerd om de hoogste kwaliteit te garanderen.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {partners.map(partner => (
        <div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-md transition-all duration-300 group">
          <div class="h-24 flex items-center justify-center mb-6">
            <img
              src={partner.logo}
              alt={partner.altText}
              class={`max-h-full max-w-full object-contain transition-transform duration-300 group-hover:scale-105 ${partner.width || ''}`}
              loading="lazy"
            />
          </div>
          <div class="text-center">
            <h3 class="text-xl font-bold text-gray-900 mb-3 font-montreal">
              {partner.name}
            </h3>
            <p class="text-gray-600 font-commons leading-relaxed">
              {partner.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

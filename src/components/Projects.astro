---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Project {
  title: string;
  description: string;
  image: ImageMetadata;
  altText: string;
}

// Import images
import project1 from '../assets/images/projects/project-1.jpg';
import project2 from '../assets/images/projects/project-2.jpg';
import project3 from '../assets/images/projects/project-3.jpg';

const projects: Project[] = [
  {
    title: "Villa Renovatie Oisterwijk",
    description: "Complete renovatie met luxe Accoya houten kozijnen en deuren voor optimale isolatie en uitstraling",
    image: project1,
    altText: "Moderne villa met Accoya houten kozijnen en deuren in Oisterwijk"
  },
  {
    title: "Monumentaal Pand Den Bosch",
    description: "Restauratie met authentieke Accoya kozijnen die perfect passen bij het historische karakter",
    image: project2,
    altText: "Gerestaureerd monumentaal pand met Accoya houten kozijnen in Den Bosch"
  },
  {
    title: "Nieuwbouw Tilburg",
    description: "Moderne nieuwbouwwoning voorzien van duurzame Accoya kozijnen en schuifpuien",
    image: project3,
    altText: "Strakke nieuwbouwwoning met Accoya kozijnen en schuifpui in Tilburg"
  }
];
---

<section id="projecten" class="py-12 sm:py-16 md:py-20 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-text-dark mb-4 sm:mb-6 font-montreal">
        Onze Projecten
      </h2>
      <p class="text-base sm:text-lg text-text-light font-commons">
        Ontdek onze recent gerealiseerde projecten met luxe Accoya houten kozijnen.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
      {projects.map(project => (
        <div class="group relative bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="aspect-w-4 aspect-h-3">
            <Image
              src={project.image}
              alt={project.altText}
              width={800}
              height={600}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-4 sm:p-6">
            <h3 class="text-lg sm:text-xl font-bold text-text-dark mb-1 sm:mb-2 font-montreal">
              {project.title}
            </h3>
            <p class="text-sm sm:text-base text-text-light font-commons">
              {project.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

---
import WorkProcess from './WorkProcess.astro';

interface Service {
  title: string;
  description: string;
  icon: string;
  features?: string[];
}

const services: Service[] = [
  {
    title: "Nieuwbouwprojecten",
    description: "Specialist in grootschalige nieuwbouwprojecten voor woningcorporaties en projectontwikkelaars.",
    icon: "window",
    features: [
      "Turn-key oplossingen",
      "Efficiënte projectplanning",
      "Duurzame materialen",
      "KOMO-gecertificeerd"
    ]
  },
  {
    title: "Renovatie & Verduurzaming",
    description: "Complete renovatie en verduurzaming van bestaande woningbestanden.",
    icon: "door",
    features: [
      "Minimale overlast bewoners",
      "Energie-efficiënte oplossingen",
      "Snelle doorlooptijd",
      "Projectbegeleiding"
    ]
  },
  {
    title: "Utiliteitsbouw",
    description: "Professionele kozijnoplossingen voor kantoren, scholen en andere utiliteitsgebouwen.",
    icon: "sliding-door",
    features: [
      "Maatwerk oplossingen",
      "Voldoet aan alle eisen",
      "Technisch advies",
      "Onderhoudsvriendelijk"
    ]
  }
];

---

<section id="services" class="py-12 sm:py-16 md:py-20 bg-gradient-to-br from-gray-50 to-gray-100">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-text-dark mb-4 sm:mb-6 font-montreal">
        Onze Specialisaties
      </h2>
      <p class="text-lg sm:text-xl text-text-light max-w-2xl mx-auto">
        Professionele kozijnoplossingen voor elk type bouwproject. Van grootschalige nieuwbouw tot complete renovatie.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-12 sm:mb-16">
      {services.map(service => (
        <div class="backdrop-blur-sm bg-white/80 rounded-xl p-6 sm:p-8 shadow-[0_8px_32px_0_rgba(31,38,135,0.15)] border border-white/20 hover:shadow-[0_8px_32px_0_rgba(31,38,135,0.25)] transition-all duration-300 hover:-translate-y-1">
        <div class="w-12 h-12 sm:w-14 sm:h-14 bg-primary-600/20 backdrop-blur-sm rounded-xl flex items-center justify-center mb-4 sm:mb-6 shadow-inner">
          <svg class="w-6 h-6 sm:w-7 sm:h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            {service.icon === 'window' && (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            )}
            {service.icon === 'door' && (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
            )}
            {service.icon === 'sliding-door' && (
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v14a1 1 0 01-1 1H5a1 1 0 01-1-1V5z M12 4v16" />
            )}
          </svg>
        </div>
        <h3 class="text-xl sm:text-2xl font-bold text-text-dark/90 mb-2 sm:mb-3 font-montreal">{service.title}</h3>
        <p class="text-base sm:text-lg text-text-light/90 font-commons">{service.description}</p>
        {service.features && (
          <ul class="list-disc pl-4 sm:pl-6 mt-4 sm:mt-6">
            {service.features.map(feature => (
              <li class="text-base sm:text-lg text-text-light/90 font-commons">{feature}</li>
            ))}
          </ul>
        )}
      </div>
      ))}
    </div>

    <div class="backdrop-blur-md bg-white/90 rounded-xl p-6 sm:p-8 lg:p-12 shadow-[0_8px_32px_0_rgba(31,38,135,0.2)] border border-white/20">
      <div id="werkproces" class="text-center max-w-3xl mx-auto mb-8 sm:mb-12">
        <h3 class="text-2xl sm:text-3xl md:text-4xl font-bold text-text-dark mb-4 font-montreal">
          Ons Werkproces
        </h3>
        <p class="text-base sm:text-lg text-text-light font-commons">
          Van eerste contact tot eindresultaat, wij zorgen voor een vlekkeloos proces
        </p>
      </div>
      <WorkProcess />
    </div>
  </div>
</section>

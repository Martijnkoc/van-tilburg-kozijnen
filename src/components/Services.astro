---
const services = [
  {
    title: "Houten Kozijnen",
    subtitle: "Specialist in Waalwijk",
    description: "Vakkundig vervaardigde houten kozijnen op maat, met oog voor detail en duurzaamheid. Gemaakt van FSC-gecertificeerd hout in onze eigen werkplaats in Waalwijk.",
    features: [
      "Duurzaam FSC-hout",
      "50 jaar garantie",
      "Hoge isolatiewaarde",
      "Onderhoudsarm"
    ],
    image: "/images/production/frames-gray.jpg",
    alt: "Hoogwaardige grijze houten kozijnen in productie bij Van Tilburg Kozijnen Waalwijk",
    link: "/kozijnen"
  },
  {
    title: "Accoya Kozijnen",
    subtitle: "Duurzaam & Onderhoudsarm",
    description: "Specialist in Accoya hout, het meest duurzame en onderhoudsarme alternatief voor traditioneel hout. Gegarandeerde levensduur van 50 jaar bovengronds.",
    features: [
      "50 jaar garantie",
      "COâ‚‚-neutraal",
      "Vormvast",
      "Natuurlijk hout"
    ],
    image: "/images/production/frames-detail.jpg",
    alt: "Detail van Accoya houten kozijn productie met hoogwaardige afwerking",
    link: "/accoya"
  },
  {
    title: "Kozijnen op Maat",
    subtitle: "Ambachtelijk Vakwerk",
    description: "Elk kozijn wordt op maat gemaakt in onze moderne werkplaats in Waalwijk, volgens uw specifieke wensen en met de nieuwste CNC-technologie.",
    features: [
      "Eigen productie",
      "Modern & traditioneel",
      "Exacte maatvoering",
      "Snelle levering"
    ],
    image: "/images/production/frames-stack.jpg",
    alt: "Precisie maatwerk van houten kozijnen in onze werkplaats",
    link: "/maatwerk"
  },
  {
    title: "Kozijnen Renovatie",
    subtitle: "Behoud van Karakter",
    description: "Professionele renovatie van bestaande kozijnen met behoud van authentieke details. Specialist in monumentale panden en jaren '30 woningen.",
    features: [
      "Authentieke details",
      "Energie besparing",
      "Waardevermeerdering",
      "Minimale overlast"
    ],
    image: "/images/production/frames-white.jpg",
    alt: "Vakkundige renovatie van klassieke houten kozijnen",
    link: "/renovatie"
  }
];

---

<section id="services" class="py-12 sm:py-16 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-8">
      <span class="text-primary-500 font-semibold">Specialist in Houten Kozijnen</span>
      <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mt-2 mb-4">
        Vakmanschap & Innovatie
      </h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Al meer dan 35 jaar specialist in hoogwaardige houten kozijnen. 
        Ambachtelijk vakwerk gecombineerd met moderne technieken.
      </p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-7xl mx-auto">
      {services.map((service) => (
        <div class="group bg-white rounded-lg shadow-sm border border-gray-100 overflow-hidden transition-all hover:shadow-lg">
          <div class="aspect-w-16 aspect-h-9">
            <img
              src={service.image}
              alt={service.alt}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500"
              loading="lazy"
              width="400"
              height="225"
            />
          </div>
          
          <div class="p-5">
            <div class="text-sm text-primary-500 font-medium mb-1">
              {service.subtitle}
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              {service.title}
            </h3>
            <p class="text-sm text-gray-600 mb-4 line-clamp-3">
              {service.description}
            </p>
            
            <ul class="space-y-2 mb-4">
              {service.features.slice(0, 3).map((feature) => (
                <li class="flex items-center text-sm text-gray-600">
                  <svg class="w-4 h-4 text-primary-500 mr-2 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            
            <a
              href={service.link}
              class="inline-flex items-center text-primary-500 font-semibold hover:text-primary-600 transition-colors text-sm"
            >
              Meer informatie
              <svg class="w-4 h-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-10 text-center">
      <button
        type="button"
        data-modal="quote"
        class="inline-flex items-center px-6 py-3 rounded-lg bg-primary-500 hover:bg-primary-600 text-white font-semibold shadow-lg transition-all duration-300 hover:shadow-xl hover:shadow-primary-500/20 hover:-translate-y-0.5"
      >
        <span>Vraag een vrijblijvende offerte aan</span>
        <svg class="w-5 h-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Services Schema.org markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "ItemList",
    "itemListElement": services.map((service, index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "item": {
        "@type": "Service",
        "name": service.title,
        "description": service.description,
        "provider": {
          "@type": "LocalBusiness",
          "name": "Van Tilburg Kozijnen",
          "image": service.image,
          "address": {
            "@type": "PostalAddress",
            "addressLocality": "Waalwijk",
            "addressRegion": "Noord-Brabant",
            "addressCountry": "NL"
          }
        }
      }
    }))
  })} />
</section>

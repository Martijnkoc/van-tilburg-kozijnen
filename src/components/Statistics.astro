---
interface Statistic {
  number: string;
  label: string;
  description: string;
}

const statistics: Statistic[] = [
  {
    number: "25+",
    label: "Jaar ervaring",
    description: "Specialist in houten kozijnen"
  },
  {
    number: "1000+",
    label: "Tevreden klanten",
    description: "In heel Nederland"
  },
  {
    number: "50",
    label: "Jaar garantie",
    description: "Op Accoya houten kozijnen"
  },
  {
    number: "100%",
    label: "Duurzaam",
    description: "CO2-negatief en recyclebaar"
  }
];
---

<section class="py-10 bg-white" aria-label="Statistics">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {statistics.map((stat) => (
        <div 
          class="text-center p-6 bg-white rounded-xl shadow-soft transform hover:scale-105 transition-transform duration-300"
          data-aos="fade-up"
          role="listitem"
        >
          <div class="text-3xl sm:text-4xl font-bold text-primary-600 mb-2">
            {stat.number}
          </div>
          <div class="text-lg sm:text-xl font-semibold text-gray-900 mb-1">
            {stat.label}
          </div>
          <div class="text-sm text-gray-600">
            {stat.description}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .shadow-soft {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 
                0 2px 4px -1px rgba(0, 0, 0, 0.03);
  }
</style>

---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  linkedin?: string;
}

const team: TeamMember[] = [
  {
    name: "Patrick van Tilburg",
    role: "Directeur & Eigenaar",
    image: "/images/team/patrick.jpg",
    linkedin: "https://www.linkedin.com/in/patrick-van-tilburg-14aa00111"
  },
  {
    name: "Anja van Tilburg",
    role: "Finance & Office Manager",
    image: "/images/team/anja.jpg",
    linkedin: "https://www.linkedin.com/in/anja-van-tilburg-54cb3b290"
  },
  {
    name: "Norain van Tilburg",
    role: "Project Manager",
    image: "/images/team/norain.jpg",
    linkedin: "https://www.linkedin.com/in/norain-van-tilburg-10987920b"
  },
  {
    name: "Nordin van Tilburg",
    role: "Werkvoorbereider & Calculator",
    image: "/images/team/nordin.jpg",
    linkedin: "https://www.linkedin.com/in/nordin-van-tilburg-aa1f6abb"
  }
];
---

<section class="py-12 sm:py-16 md:py-20 bg-gray-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12 sm:mb-16">
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-text-dark mb-4 sm:mb-6 font-montreal">
        Ons Team
      </h2>
      <p class="text-base sm:text-lg text-text-light font-commons">
        Maak kennis met ons ervaren team van professionals die uw project tot een succes maken.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-10">
      {team.map(member => (
        <div class="bg-white rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <div class="aspect-w-4 aspect-h-5">
            <img
              src={member.image}
              alt={member.name}
              class="w-full h-full object-cover object-center"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-1">{member.name}</h3>
            <p class="text-gray-600 mb-4">{member.role}</p>
            {member.linkedin && (
              <a
                href={member.linkedin}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center text-primary-600 hover:text-primary-700 transition-colors"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
                LinkedIn
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .aspect-w-4 {
    position: relative;
    padding-bottom: 125%; /* 4:5 aspect ratio */
  }
  
  .aspect-w-4 > img {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>

---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  role: string;
  image: string;
  className?: string;
}

const { name, role, image, className = '' } = Astro.props;
---

<div class={`flex flex-col items-center ${className}`}>
  <div class="relative w-64 h-64 mb-4 rounded-lg overflow-hidden shadow-lg">
    <img
      src={image}
      alt={`Foto van ${name}`}
      class="w-full h-full object-cover"
      loading="lazy"
    />
  </div>
  <h3 class="text-xl font-semibold text-gray-900">{name}</h3>
  <p class="text-gray-600">{role}</p>
</div>

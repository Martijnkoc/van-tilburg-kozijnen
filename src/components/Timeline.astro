<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">Onze Geschiedenis</h2>
      <p class="text-lg text-gray-600">Al meer dan 35 jaar uw specialist in kozijnen</p>
    </div>
    
    <div class="relative">
      {/* Vertical line */}
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-0.5 bg-blue-600"></div>
      
      <div class="space-y-12 relative">
        {timelineEvents.map((event, index) => (
          <div class={`flex flex-col md:flex-row items-center ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
            <div class="md:w-1/2 flex justify-center md:justify-end px-4">
              <div class={`bg-white p-6 rounded-lg shadow-lg max-w-md transform transition duration-500 hover:scale-105 ${index % 2 === 0 ? 'md:ml-auto' : ''}`}>
                <span class="text-blue-600 font-bold text-xl mb-2 block">{event.year}</span>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{event.title}</h3>
                <p class="text-gray-600">{event.description}</p>
              </div>
            </div>
            
            <div class="md:w-1/2 flex justify-center items-center">
              <div class="w-8 h-8 bg-blue-600 rounded-full border-4 border-white shadow relative z-10">
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-2 h-2 bg-white rounded-full"></div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

---
const usps = [
  {
    icon: 'shield-check',
    text: '50 jaar garantie'
  },
  {
    icon: 'truck',
    text: 'Gratis bezorging'
  },
  {
    icon: 'badge-check',
    text: 'KOMO gecertificeerd'
  },
  {
    icon: 'thumb-up',
    text: 'Nederlands vakmanschap'
  }
];
---

<div class="hidden md:block bg-primary-600 text-white">
  <div class="container mx-auto">
    <div class="grid grid-cols-4 gap-4 py-2">
      {usps.map((usp, index) => (
        <div class="flex items-center justify-center gap-2">
          <span class="text-sm font-medium">{usp.text}</span>
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .icon-container {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
  }

  .icon-container:hover {
    transform: scale(1.1);
  }
</style>

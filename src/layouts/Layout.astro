---
// Import styles first
import '../styles/base.css';

import Header from '../components/Header.astro';
import CookieConsent from '../components/CookieConsent.astro';
import SocialMedia from '../components/SocialMedia.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import USPBar from '../components/USPBar.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Scheduler from '../components/Scheduler.astro';
import AppointmentForm from '../components/AppointmentForm.astro';
import QuoteModal from '../components/QuoteModal.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
}

const {
  title = 'R.VAN TILBURG KOZIJNEN - Specialist in Accoya houten kozijnen',
  description = 'Specialist in luxe Accoya houten kozijnen, deuren en schuifpuien. 50 jaar garantie, duurzaam en onderhoudsarm. Nederlands vakmanschap met KOMO-keurmerk.',
  keywords = 'Accoya kozijnen, houten kozijnen, luxe kozijnen, duurzame kozijnen, KOMO gecertificeerd, schuifpuien, deuren, Oisterwijk, Noord-Brabant, 50 jaar garantie, onderhoudsarm, duurzaam hout',
  image = '/images/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="nl" class="scroll-smooth font-montserrat">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="keywords" content={keywords} />
    
    <!-- Preload Montserrat font -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      as="style"
      crossorigin
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- EmailJS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#004A77" />
    
    <!-- Performance & Security -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    
    <!-- Preconnect to required origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Local Business Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "HomeAndConstructionBusiness",
        "name": "R.VAN TILBURG KOZIJNEN",
        "image": "/images/og-image.jpg",
        "description": "Specialist in luxe Accoya houten kozijnen, deuren en schuifpuien. 50 jaar garantie, duurzaam en onderhoudsarm.",
        "@id": "https://vantilburgkozijnen.nl",
        "url": "https://vantilburgkozijnen.nl",
        "telephone": "+31164672085",
        "email": "info@vantilburgkozijnen.nl",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Putsmolentje 7",
          "addressLocality": "Ossendrecht",
          "postalCode": "4641 SK",
          "addressCountry": "NL"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 51.3998,
          "longitude": 4.3245
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "07:30",
          "closes": "17:00"
        },
        "sameAs": [
          "https://www.facebook.com/vantilburgkozijnen",
          "https://www.instagram.com/vantilburgkozijnen",
          "https://www.linkedin.com/company/van-tilburg-kozijnen"
        ],
        "priceRange": "€€€",
        "areaServed": {
          "@type": "GeoCircle",
          "geoMidpoint": {
            "@type": "GeoCoordinates",
            "latitude": 51.3998,
            "longitude": 4.3245
          },
          "geoRadius": "100000"
        }
      }
    </script>

    <!-- Breadcrumb Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://vantilburgkozijnen.nl"
        }]
      }
    </script>

    <!-- Additional SEO meta tags -->
    <meta name="geo.region" content="NL-NB" />
    <meta name="geo.placename" content="Ossendrecht" />
    <meta name="geo.position" content="51.3998;4.3245" />
    <meta name="ICBM" content="51.3998, 4.3245" />
    
    <!-- Language alternatives -->
    <link rel="alternate" href="https://vantilburgkozijnen.nl" hreflang="nl-nl" />
    <link rel="alternate" href="https://vantilburgkozijnen.nl" hreflang="x-default" />
    
    <!-- Performance optimizations -->
    <link rel="preload" as="image" href="/images/hero-image.jpg" />
    <link rel="preload" as="font" href="/fonts/montserrat-v25-latin-regular.woff2" type="font/woff2" crossorigin />
    <meta http-equiv="Cache-Control" content="public, max-age=31536000" />
    
    <!-- Mobile optimization -->
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    
    <!-- Social media verification -->
    <meta name="facebook-domain-verification" content="your-verification-code" />
    <meta name="google-site-verification" content="your-verification-code" />
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body class="bg-white">
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md">
      Skip to main content
    </a>
    
    <USPBar />
    <Header />
    <main id="main" class="flex-grow">
      <slot />
    </main>
    <Footer />
    <CookieConsent />
    <SocialMedia />
    <ScrollToTop />
    <WhatsAppButton />
    <Scheduler />
    <AppointmentForm />
    <QuoteModal />
    
    <!-- AOS Script -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        AOS.init({
          duration: 800,
          easing: 'ease-out',
          once: false,
          mirror: true,
          offset: 50
        });
      });
    </script>
    
    <script>
      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
    
    <script>
      import { initializeModals } from '../scripts/modal.js';
      import { initializeNotifications } from '../scripts/notification.js';

      document.addEventListener('DOMContentLoaded', () => {
        initializeModals();
        initializeNotifications();
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Montserrat', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  html {
    font-feature-settings: "cv02","cv03","cv04","cv11";
  }
  
  :root {
    --header-height: 5rem;
    --header-scroll-height: 4rem;
  }

  @media (min-width: 768px) {
    :root {
      --header-height: 6rem;
      --header-scroll-height: 5rem;
    }
  }
</style>

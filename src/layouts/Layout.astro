---
// Import styles first
import '../styles/base.css';

import Header from '../components/Header.astro';
import CookieConsent from '../components/CookieConsent.astro';
import SocialMedia from '../components/SocialMedia.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import USPBar from '../components/USPBar.astro';
import AppointmentForm from '../components/AppointmentForm.astro';
import QuoteModal from '../components/QuoteModal.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
}

const {
  title = 'R.VAN TILBURG KOZIJNEN | Grootschalige Kozijnprojecten voor Woningcorporaties & Aannemers',
  description = 'Specialist in grootschalige kozijnprojecten voor woningcorporaties en aannemers. ✓ Turn-key projectuitvoering ✓ Bewezen kostenefficiënt ✓ KOMO & VCA gecertificeerd ✓ Landelijke dekking ✓ 35+ jaar ervaring in renovatie en nieuwbouw',
  keywords = 'kozijnprojecten, woningcorporatie kozijnen, projectmatige kozijnen, renovatie kozijnen, nieuwbouw kozijnen, turn-key kozijnrenovatie, kozijnen woningverbetering, verduurzaming kozijnen, KOMO gecertificeerde kozijnen, VCA gecertificeerd, projectbegeleiding kozijnen, kozijnen grootschalig project, kozijnen aanbesteding, kozijnen tender, kozijnen calculatie',
  image = '/images/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="nl" class="scroll-smooth font-montserrat">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="keywords" content={keywords} />
    
    <!-- Preload Montserrat font -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      as="style"
      crossorigin
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    
    <meta name="generator" content={Astro.generator} />
    
    <!-- EmailJS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"></script>
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="business.business" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:locale" content="nl_NL" />
    <meta property="og:site_name" content="R.VAN TILBURG KOZIJNEN" />
    <meta property="business:contact_data:street_address" content="UW_STRAAT_EN_NUMMER" />
    <meta property="business:contact_data:locality" content="Oisterwijk" />
    <meta property="business:contact_data:postal_code" content="UW_POSTCODE" />
    <meta property="business:contact_data:country_name" content="Nederland" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="R.VAN TILBURG KOZIJNEN" />
    <meta name="geo.region" content="NL-NB" />
    <meta name="geo.placename" content="Oisterwijk" />
    <meta name="geo.position" content="51.5797;5.1927" />
    <meta name="ICBM" content="51.5797, 5.1927" />
    
    <!-- Verification -->
    <meta name="google-site-verification" content="YOUR_VERIFICATION_CODE" />
    
    <!-- Rich Results / Schema.org -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "GeneralContractor",
        "name": "R.VAN TILBURG KOZIJNEN",
        "url": "https://www.vantilburgkozijnen.nl",
        "logo": "https://www.vantilburgkozijnen.nl/images/logo.png",
        "description": "Specialist in grootschalige kozijnprojecten voor woningcorporaties en aannemers. Meer dan 35 jaar ervaring in renovatie en nieuwbouw.",
        "areaServed": ["Noord-Brabant", "Gelderland", "Zuid-Holland", "Utrecht", "Noord-Holland"],
        "priceRange": "€€€",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "UW_STRAAT_EN_NUMMER",
          "addressLocality": "Oisterwijk",
          "postalCode": "UW_POSTCODE",
          "addressRegion": "Noord-Brabant",
          "addressCountry": "NL"
        },
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "UW_TELEFOONNUMMER",
          "contactType": "sales",
          "availableLanguage": ["Dutch", "English"],
          "areaServed": "NL"
        },
        "sameAs": [
          "https://www.linkedin.com/company/r-van-tilburg-kozijnen",
          "https://www.facebook.com/vantilburgkozijnen"
        ],
        "knowsAbout": [
          "Kozijnrenovatie",
          "Woningverbetering",
          "Verduurzaming",
          "Projectmanagement",
          "Turn-key projectuitvoering",
          "KOMO-certificering",
          "VCA-certificering"
        ],
        "hasCredential": [
          {
            "@type": "EducationalOccupationalCredential",
            "credentialCategory": "certification",
            "name": "KOMO Certificering"
          },
          {
            "@type": "EducationalOccupationalCredential",
            "credentialCategory": "certification",
            "name": "VCA Certificering"
          }
        ],
        "keywords": "kozijnprojecten, woningcorporatie kozijnen, projectmatige kozijnen, renovatie kozijnen, nieuwbouw kozijnen, turn-key kozijnrenovatie",
        "slogan": "Uw partner in grootschalige kozijnprojecten",
        "foundingDate": "1988",
        "numberOfEmployees": {
          "@type": "QuantitativeValue",
          "minValue": "20",
          "maxValue": "50"
        }
      }
    </script>
    
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#004A77" />
    
    <!-- Performance & Security -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="Permissions-Policy" content="interest-cohort=()" />
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    <meta http-equiv="Cache-Control" content="public, max-age=31536000" />
    
    <!-- Resource Hints -->
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="dns-prefetch" href="https://fonts.gstatic.com" />
    
    <!-- Critical CSS Preload -->
    <link rel="preload" href="/styles/critical.css" as="style" />
    <link rel="preload" href="/fonts/montserrat-v25-latin-regular.woff2" as="font" type="font/woff2" crossorigin />
    
    <!-- Advanced SEO Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="bingbot" content="index, follow" />
    <meta name="rating" content="General" />
    <meta name="revisit-after" content="7 days" />
    <meta name="target" content="b2b" />
    <meta name="audience" content="business" />
    <meta name="coverage" content="Worldwide" />
    <meta name="og:type" content="business.business" />
    
    <!-- Mobile & PWA Optimizations -->
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="VAN TILBURG KOZIJNEN" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#1F4B3F" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#1F4B3F" media="(prefers-color-scheme: dark)" />
    <link rel="manifest" href="/manifest.json" />
    
    <!-- Favicon & Touch Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1F4B3F" />
    <meta name="msapplication-TileColor" content="#1F4B3F" />
    
    <!-- Advanced Schema.org Markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "@id": "https://www.vantilburgkozijnen.nl/#organization",
        "name": "R.VAN TILBURG KOZIJNEN",
        "url": "https://www.vantilburgkozijnen.nl",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.vantilburgkozijnen.nl/images/logo.png",
          "width": "512",
          "height": "512"
        },
        "image": {
          "@type": "ImageObject",
          "url": "https://www.vantilburgkozijnen.nl/images/og-image.jpg",
          "width": "1200",
          "height": "630"
        },
        "description": "Specialist in grootschalige kozijnprojecten voor woningcorporaties en aannemers. Meer dan 35 jaar ervaring in renovatie en nieuwbouw.",
        "areaServed": {
          "@type": "GeoCircle",
          "geoMidpoint": {
            "@type": "GeoCoordinates",
            "latitude": "51.5797",
            "longitude": "5.1927"
          },
          "geoRadius": "150000"
        },
        "award": [
          "KOMO Certificering",
          "VCA Certificering",
          "FSC® 100% Certificering",
          "PEFC™ Certificering"
        ],
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Kozijn Diensten",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Grootschalige Kozijnrenovatie",
                "description": "Complete kozijnrenovatie voor woningcorporaties"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Nieuwbouw Kozijnprojecten",
                "description": "Turn-key kozijnoplossingen voor nieuwbouwprojecten"
              }
            }
          ]
        }
      }
    </script>

    <!-- Breadcrumb Schema.org markup -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [{
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://vantilburgkozijnen.nl"
        }]
      }
    </script>

    <!-- Language alternatives -->
    <link rel="alternate" href="https://vantilburgkozijnen.nl" hreflang="nl-nl" />
    <link rel="alternate" href="https://vantilburgkozijnen.nl" hreflang="x-default" />
    
    <!-- Performance optimizations -->
    <link rel="preload" as="image" href="/images/hero-image.jpg" />
    <link rel="preload" as="font" href="/fonts/montserrat-v25-latin-regular.woff2" type="font/woff2" crossorigin />
    <meta http-equiv="Cache-Control" content="public, max-age=31536000" />
    
    <!-- Mobile optimization -->
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    
    <!-- Social media verification -->
    <meta name="facebook-domain-verification" content="your-verification-code" />
    
    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
  </head>
  <body class="bg-white">
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md">
      Skip to main content
    </a>
    
    <USPBar />
    <Header />
    <main id="main" class="flex-grow pt-20">
      <slot />
    </main>
    <Footer />
    <CookieConsent />
    <SocialMedia />
    <ScrollToTop />
    <AppointmentForm />
    <QuoteModal />
    
    <!-- AOS Script -->
    <script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        AOS.init({
          duration: 800,
          easing: 'ease-out',
          once: false,
          mirror: true,
          offset: 50
        });
      });
    </script>
    
    <script>
      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
    
    <script>
      import { initializeModals } from '../scripts/modal.js';
      import { initializeNotifications } from '../scripts/notification.js';

      document.addEventListener('DOMContentLoaded', () => {
        initializeModals();
        initializeNotifications();
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Montserrat', sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  html {
    font-feature-settings: "cv02","cv03","cv04","cv11";
  }
  
  :root {
    --header-height: 5rem;
    --header-scroll-height: 4rem;
  }

  @media (min-width: 768px) {
    :root {
      --header-height: 6rem;
      --header-scroll-height: 5rem;
    }
  }
</style>

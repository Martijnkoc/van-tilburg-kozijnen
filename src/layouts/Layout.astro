---
import Header from '../components/Header.astro';
import CookieConsent from '../components/CookieConsent.astro';
import SocialMedia from '../components/SocialMedia.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';
import USPBar from '../components/USPBar.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import Scheduler from '../components/Scheduler.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
}

const {
  title = 'R.VAN TILBURG KOZIJNEN - Specialist in Accoya houten kozijnen',
  description = 'Specialist in luxe Accoya houten kozijnen, deuren en schuifpuien. 50 jaar garantie, duurzaam en onderhoudsarm. Nederlands vakmanschap met KOMO-keurmerk.',
  keywords = 'Accoya kozijnen, houten kozijnen, luxe kozijnen, duurzame kozijnen, KOMO gecertificeerd, schuifpuien, deuren, Oisterwijk, Noord-Brabant, 50 jaar garantie, onderhoudsarm, duurzaam hout',
  image = '/images/og-image.jpg'
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import '../styles/base.css';
import '../styles/fonts.css';

---

<!DOCTYPE html>
<html lang="nl" class="scroll-smooth font-montserrat">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="keywords" content={keywords} />
    
    <!-- Preload Montserrat font -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      as="style"
      crossorigin
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
      media="print"
      onload="this.media='all'"
    />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- PWA -->
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#004A77" />
    
    <!-- Performance & Security -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />
    
    <!-- Preconnect to required origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <!-- Skip to main content for accessibility -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded-md">
      Skip to main content
    </a>
    
    <Header />
    <USPBar />
    
    <main id="main" class="flex-grow">
      <slot />
    </main>
    
    <SocialMedia />
    <Footer />
    <ScrollToTop />
    <CookieConsent />
    <WhatsAppButton />
    <Scheduler />
    
    <script>
      // Register service worker for PWA
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js');
        });
      }
    </script>
  </body>
</html>

<style is:global>
  html {
    font-feature-settings: "cv02","cv03","cv04","cv11";
  }
  
  :root {
    --header-height: 5rem;
    --header-scroll-height: 4rem;
  }

  @media (min-width: 768px) {
    :root {
      --header-height: 6rem;
      --header-scroll-height: 5rem;
    }
  }
</style>

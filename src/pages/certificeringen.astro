---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const certificates = [
  {
    name: "KOMO",
    description: "KOMO-certificering garandeert dat onze kozijnen voldoen aan de hoogste kwaliteitseisen en bouwnormen.",
    icon: "/images/certificates/komo.svg"
  },
  {
    name: "FSC",
    description: "Als FSC-gecertificeerd bedrijf garanderen wij dat ons hout afkomstig is uit verantwoord beheerde bossen.",
    icon: "/images/certificates/fsc.svg"
  },
  {
    name: "SKH",
    description: "SKH-certificering voor hoogwaardige houten gevelelementen en verwante producten.",
    icon: "/images/certificates/skh.svg"
  },
  {
    name: "VCA",
    description: "VCA-certificering waarborgt dat we veilig en verantwoord werken volgens de strengste normen.",
    icon: "/images/certificates/vca.svg"
  }
];

const standards = [
  {
    title: "Kwaliteitsborging",
    items: [
      "Regelmatige kwaliteitscontroles",
      "Gecertificeerde productieprocessen",
      "Uitgebreide garantievoorwaarden",
      "Continue productverbetering"
    ]
  },
  {
    title: "Duurzaamheid",
    items: [
      "FSC-gecertificeerd hout",
      "Energiezuinige productie",
      "Minimale afvalproductie",
      "Recycling van materialen"
    ]
  },
  {
    title: "Veiligheid",
    items: [
      "VCA-gecertificeerde medewerkers",
      "Veilige werkomgeving",
      "Regelmatige veiligheidstrainingen",
      "Strenge veiligheidsprotocollen"
    ]
  }
];

const benefits = [
  {
    title: "Kwaliteitsgarantie",
    description: "Onze certificeringen garanderen dat u altijd verzekerd bent van de hoogste kwaliteit kozijnen en dienstverlening.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
  },
  {
    title: "Duurzame keuze",
    description: "Met onze FSC-certificering draagt u bij aan het behoud van bossen wereldwijd en kiest u voor een duurzame toekomst.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`
  },
  {
    title: "Veilig werken",
    description: "Onze VCA-certificering verzekert u ervan dat alle werkzaamheden veilig en volgens de strengste normen worden uitgevoerd.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
  }
];
---

<Layout title="Certificeringen | Van Tilburg Kozijnen">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-800">
      <!-- Decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
      </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl">
          Onze <span class="text-gradient">Certificeringen</span>
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-300">
          Kwaliteit en vakmanschap geborgd door toonaangevende certificeringen in de kozijnenindustrie.
        </p>
      </div>
    </div>
  </section>

  <!-- Certificates Grid -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        {certificates.map((cert) => (
          <div class="relative group">
            <div class="absolute -inset-1 rounded-lg bg-gradient-to-r from-orange-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-all duration-300 blur"></div>
            <div class="relative p-6 bg-white rounded-lg shadow-xl">
              <img src={cert.icon} alt={cert.name} class="h-16 w-auto mb-4" />
              <h3 class="text-lg font-semibold text-gray-900">{cert.name}</h3>
              <p class="mt-2 text-gray-600">{cert.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Standards Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Onze kwaliteitsstandaarden
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {standards.map((standard) => (
          <div class="bg-white p-6 rounded-lg shadow-xl">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{standard.title}</h3>
            <ul class="space-y-3">
              {standard.items.map((item) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-orange-500 mt-1 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-gray-600">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">
        Wat betekent dit voor u?
      </h2>
      <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
        {benefits.map((benefit) => (
          <div class="relative group">
            <div class="absolute -inset-1 rounded-lg bg-gradient-to-r from-orange-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-all duration-300 blur"></div>
            <div class="relative p-6 bg-white rounded-lg shadow-xl">
              <div class="text-orange-500" set:html={benefit.icon} />
              <h3 class="mt-4 text-lg font-semibold text-gray-900">{benefit.title}</h3>
              <p class="mt-2 text-gray-600">{benefit.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-16 bg-primary-900">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
      <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white">
          Kies voor gecertificeerde kwaliteit
        </h2>
        <p class="mt-4 text-lg text-gray-300">
          Ervaar het verschil van werken met een gecertificeerd kozijnenbedrijf.
        </p>
        <div class="mt-8 flex justify-center gap-4">
          <button
            onclick="window.openQuoteModal()"
            class="btn btn-primary"
          >
            Offerte aanvragen
          </button>
          <button
            onclick="window.openAppointmentModal()"
            class="btn btn-secondary"
          >
            Afspraak maken
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

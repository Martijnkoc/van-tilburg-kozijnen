---
import Layout from '../layouts/Layout.astro';
import GoogleMap from '../components/GoogleMap.astro';

const contactInfo = {
  address: {
    street: "Putsmolentje 7",
    city: "4641 SK Ossendrecht",
    mapUrl: "https://maps.google.com/?q=Putsmolentje+7+4641+SK+Ossendrecht"
  },
  contact: {
    phone: "0164 67 20 85",
    email: "hallo@vantilburg-kozijnen.nl"
  },
  hours: {
    weekdays: "Maandag t/m Vrijdag",
    morning: "7.00 tot 12.15 uur",
    afternoon: "13.00 tot 16.30 uur",
    evening: "'s Avonds alleen op afspraak"
  }
};

---

<Layout title="Contact | Van Tilburg Kozijnen">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-800">
      <!-- Decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
      </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl">
          Neem <span class="text-gradient">Contact</span> Op
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-300">
          Heeft u vragen of wilt u meer informatie? Neem gerust contact met ons op.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Contactgegevens</h2>
            <div class="space-y-6">
              <!-- Address -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900">Adres</h3>
                  <p class="mt-1 text-gray-600">
                    <a href={contactInfo.address.mapUrl} target="_blank" rel="noopener noreferrer" class="hover:text-orange-600">
                      {contactInfo.address.street}<br />
                      {contactInfo.address.city}
                    </a>
                  </p>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900">Telefoon</h3>
                  <p class="mt-1 text-gray-600">
                    <a href={`tel:${contactInfo.contact.phone.replace(/\s/g, '')}`} class="hover:text-orange-600">
                      {contactInfo.contact.phone}
                    </a>
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900">E-mail</h3>
                  <p class="mt-1 text-gray-600">
                    <a href={`mailto:${contactInfo.contact.email}`} class="hover:text-orange-600">
                      {contactInfo.contact.email}
                    </a>
                  </p>
                </div>
              </div>

              <!-- Opening Hours -->
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-6 w-6 text-orange-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-lg font-medium text-gray-900">Openingstijden</h3>
                  <div class="mt-1 text-gray-600 space-y-1">
                    <p>{contactInfo.hours.weekdays}</p>
                    <p>{contactInfo.hours.morning}</p>
                    <p>{contactInfo.hours.afternoon}</p>
                    <p class="text-gray-500 italic">{contactInfo.hours.evening}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Google Maps -->
        <div class="relative h-full">
          <GoogleMap className="h-full" />
        </div>
      </div>
    </div>
  </section>
</Layout>

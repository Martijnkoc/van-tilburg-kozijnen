---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
    {
        title: 'Nieuwbouw',
        description: 'Van ontwerp tot realisatie verzorgen wij uw complete nieuwbouwproject. Met oog voor detail en kwaliteit creëren we uw droomproject.',
        features: [
            'Professioneel projectmanagement',
            'Hoogwaardige materialen',
            'Duurzame oplossingen',
            'Tijdige oplevering',
        ],
        image: '/images/service-nieuwbouw.jpg',
    },
    {
        title: 'Renovatie',
        description: 'Specialistische renovatie met respect voor het bestaande gebouw. We combineren traditionele technieken met moderne oplossingen.',
        features: [
            'Behoud van authentieke details',
            'Moderne comfort toevoegingen',
            'Energiebesparende maatregelen',
            'Minimale overlast',
        ],
        image: '/images/service-renovatie.jpg',
    },
    {
        title: 'Verbouw',
        description: 'Transformeer uw bestaande ruimte naar uw wensen. We denken mee over de beste oplossingen voor uw verbouwproject.',
        features: [
            'Creatieve oplossingen',
            'Efficiënte uitvoering',
            'Vakkundige afwerking',
            'Persoonlijke begeleiding',
        ],
        image: '/images/service-verbouw.jpg',
    },
    {
        title: 'Onderhoud',
        description: 'Preventief en correctief onderhoud voor een optimale staat van uw gebouw. We zorgen voor regelmatige inspectie en tijdig onderhoud.',
        features: [
            'Periodieke inspecties',
            'Preventief onderhoud',
            '24/7 storingsdienst',
            'Onderhoudsplanning',
        ],
        image: '/images/service-onderhoud.jpg',
    },
];
---

<Layout title="Diensten - Your Company">
    <Header />
    <main class="pt-20">
        <!-- Hero Section -->
        <section class="bg-bg-light py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-6">Onze Diensten</h1>
                    <p class="text-xl text-text-light">
                        Ontdek ons complete aanbod aan bouwdiensten, uitgevoerd door ervaren professionals
                    </p>
                </div>
            </div>
        </section>

        <!-- Services -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="space-y-20">
                    {services.map((service, index) => (
                        <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-12 items-center`}>
                            <div class="lg:w-1/2">
                                <img
                                    src={service.image}
                                    alt={service.title}
                                    class="w-full h-[400px] object-cover rounded-lg shadow-lg"
                                />
                            </div>
                            <div class="lg:w-1/2">
                                <h2 class="text-3xl font-bold text-text-dark mb-4">{service.title}</h2>
                                <p class="text-text-light mb-6">{service.description}</p>
                                <ul class="space-y-3">
                                    {service.features.map(feature => (
                                        <li class="flex items-center text-text-light">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary mr-3" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                            </svg>
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- CTA -->
        <section class="bg-primary py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-3xl mx-auto text-center text-white">
                    <h2 class="text-3xl font-bold mb-6">Klaar om uw project te starten?</h2>
                    <p class="text-white/90 mb-8">
                        Neem contact met ons op voor een vrijblijvende offerte of om uw project te bespreken.
                    </p>
                    <a
                        href="/contact"
                        class="inline-block bg-white text-primary px-8 py-3 rounded-full hover:bg-white/90 transition-colors"
                    >
                        Contact opnemen
                    </a>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

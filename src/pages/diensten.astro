---
import Layout from '../layouts/Layout.astro';

const services = [
    {
        title: 'Nieuwbouw',
        description: 'Van ontwerp tot realisatie verzorgen wij uw complete nieuwbouwproject. Met oog voor detail en kwaliteit creÃ«ren we uw droomproject.',
        features: [
            'Professioneel projectmanagement',
            'Hoogwaardige materialen',
            'Duurzame oplossingen',
            'Tijdige oplevering',
        ],
        image: '/images/service-nieuwbouw.jpg',
    },
    {
        title: 'Renovatie',
        description: 'Specialistische renovatie met respect voor het bestaande gebouw. We combineren traditionele technieken met moderne oplossingen.',
        features: [
            'Behoud van karakter',
            'Energiebesparende maatregelen',
            'Minimale overlast',
            'Vakkundig uitgevoerd',
        ],
        image: '/images/service-renovatie.jpg',
    },
    {
        title: 'Onderhoud',
        description: 'Preventief en correctief onderhoud voor een langere levensduur van uw kozijnen. Regelmatig onderhoud voorkomt onnodige kosten.',
        features: [
            'Periodieke inspectie',
            'Snelle service',
            'Deskundig advies',
            'Kwaliteitsgarantie',
        ],
        image: '/images/service-onderhoud.jpg',
    }
];
---

<Layout title="Diensten - R.VAN TILBURG KOZIJNEN">
    <main class="pt-20">
        <!-- Hero Section -->
        <section class="bg-gray-50 py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">Onze Diensten</h1>
                    <p class="text-xl text-gray-600">Ontdek ons complete aanbod aan diensten</p>
                </div>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {services.map((service) => (
                        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                            <img
                                src={service.image}
                                alt={service.title}
                                class="w-full h-48 object-cover"
                            />
                            <div class="p-6">
                                <h3 class="text-2xl font-bold text-gray-900 mb-4">{service.title}</h3>
                                <p class="text-gray-600 mb-6">{service.description}</p>
                                <ul class="space-y-2">
                                    {service.features.map((feature) => (
                                        <li class="flex items-center text-gray-600">
                                            <svg class="w-5 h-5 text-primary-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                            </svg>
                                            {feature}
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

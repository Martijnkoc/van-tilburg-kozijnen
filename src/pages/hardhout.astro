---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const features = [
  {
    name: "Duurzaam",
    description: "Hardhout kozijnen gaan bij goed onderhoud gemakkelijk 50 jaar of langer mee.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>`
  },
  {
    name: "Natuurlijk materiaal",
    description: "100% natuurlijk en milieuvriendelijk materiaal met een warme uitstraling.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>`
  },
  {
    name: "Uitstekende isolatie",
    description: "Hardhout heeft van nature goede isolerende eigenschappen voor warmte en geluid.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>`
  },
  {
    name: "Maatwerk",
    description: "Elk kozijn wordt op maat gemaakt volgens uw specifieke wensen en eisen.",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z"></path></svg>`
  }
];

const specifications = [
  { name: "Levensduur", value: "50+ jaar" },
  { name: "Isolatiewaarde", value: "Uitstekend" },
  { name: "Onderhoud", value: "Periodiek schilderwerk" },
  { name: "Duurzaamheid", value: "FSC-gecertificeerd" },
  { name: "Materiaal", value: "Meranti, Merbau of Sapeli" },
  { name: "Afwerking", value: "Dekkend of transparant" }
];

const faqs = [
  {
    question: "Hoe lang gaan hardhout kozijnen mee?",
    answer: "Bij goed onderhoud gaan hardhout kozijnen gemakkelijk 50 jaar of langer mee. Het is belangrijk om de kozijnen periodiek te controleren en tijdig te schilderen om de levensduur te maximaliseren."
  },
  {
    question: "Welke houtsoorten gebruiken jullie?",
    answer: "Wij werken met verschillende FSC-gecertificeerde hardhoutsoorten zoals Meranti, Merbau en Sapeli. De keuze voor een specifieke houtsoort hangt af van uw wensen qua uitstraling en budget."
  },
  {
    question: "Hoe vaak moet ik hardhout kozijnen schilderen?",
    answer: "Dit is afhankelijk van de locatie en weersbelasting. Gemiddeld adviseren wij om de 6-8 jaar voor dekkend schilderwerk en om de 4-6 jaar voor transparante afwerking."
  },
  {
    question: "Zijn hardhout kozijnen duurzaam?",
    answer: "Ja, wij gebruiken uitsluitend FSC-gecertificeerd hardhout uit verantwoord beheerde bossen. Daarnaast hebben houten kozijnen een zeer lange levensduur en zijn ze volledig recyclebaar."
  }
];
---

<Layout title="Hardhout Kozijnen | Van Tilburg Kozijnen">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary-900 to-primary-800">
      <!-- Decorative elements -->
      <div class="absolute inset-0">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
      </div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl">
          <span class="text-gradient">Hardhout</span> Kozijnen
        </h1>
        <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-300">
          Traditioneel vakmanschap ontmoet moderne techniek in onze hardhout kozijnen. Duurzaam, natuurlijk en met een warme uitstraling.
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
        {features.map((feature) => (
          <div class="relative group">
            <div class="absolute -inset-1 rounded-lg bg-gradient-to-r from-orange-500 to-primary-600 opacity-0 group-hover:opacity-100 transition-all duration-300 blur"></div>
            <div class="relative p-6 bg-white rounded-lg shadow-xl">
              <div class="text-orange-500" set:html={feature.icon} />
              <h3 class="mt-4 text-lg font-semibold text-gray-900">{feature.name}</h3>
              <p class="mt-2 text-gray-600">{feature.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Specifications Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Specificaties
      </h2>
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
        {specifications.map((spec) => (
          <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
            <dt class="text-sm font-medium text-gray-500">{spec.name}</dt>
            <dd class="mt-1 text-lg font-semibold text-gray-900">{spec.value}</dd>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 text-center mb-12">
        Veelgestelde vragen
      </h2>
      <div class="max-w-3xl mx-auto divide-y divide-gray-200">
        {faqs.map((faq) => (
          <div class="py-6">
            <h3 class="text-lg font-medium text-gray-900">
              {faq.question}
            </h3>
            <p class="mt-2 text-gray-600">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="relative py-16 bg-primary-900">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
      <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
          Interesse in hardhout kozijnen?
        </h2>
        <p class="mt-4 text-lg text-gray-300">
          Neem contact met ons op voor een vrijblijvend gesprek over de mogelijkheden.
        </p>
        <div class="mt-8">
          <a
            href="/contact"
            class="btn btn-white"
          >
            Neem contact op
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

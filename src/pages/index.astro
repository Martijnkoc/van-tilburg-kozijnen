---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const statistics = [
  {
    number: "53+",
    label: "jaar ervaring",
    description: "in houten projecten"
  },
  {
    number: "700+",
    label: "grootschalige projecten",
    description: "voor woningcorporaties"
  },
  {
    number: "2500+",
    label: "kozijnen per maand",
    description: "productiecapaciteit"
  },
  {
    number: "98%",
    label: "volgens planning",
    description: "uitlevering binnen budget"
  }
];

const services = [
  {
    title: "Nieuwbouwprojecten",
    description: "Specialist in groot en kleinschalige nieuwbouwprojecten, voor aannemerij, woningcorporaties en projectontwikkelaars.",
    features: [
      "Eerlijk en meedenkend advies",
      "Uitleveren volgens planning",
      "Duurzame materialen",
      "KOMO-gecertificeerd"
    ],
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 21h18M3 10h18M3 7l9-4 9 4M4 10h2v11H4V10zm14 0h2v11h-2V10z" />
    </svg>`
  },
  {
    title: "Renovatie & Verduurzaming",
    description: "Complete renovaties en/of verduurzaming van bestaande woningen en gebouwen.",
    features: [
      "Meedenkend met bewoners",
      "Energie-efficiënte oplossingen",
      "Snelle doorlooptijd",
      "Leveren op locatie"
    ],
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
    </svg>`
  },
  {
    title: "Utiliteitsbouw",
    description: "Kozijnoplossingen voor kantoren, scholen, ziekenhuizen en andere utiliteitsgebouwen.",
    features: [
      "Maatwerk oplossingen",
      "Voldoet aan alle eisen",
      "Technisch advies",
      "Onderhoudsvriendelijk"
    ],
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`
  }
];

const workProcess = [
  {
    step: "01",
    title: "Eerlijk adviesgesprek",
    description: "Onze kenners bekijken de aanvraag en adviseren vrijblijvend over de beste oplossingen voor Uw project."
  },
  {
    step: "02",
    title: "Inmeting door vakmensen",
    description: "Één van onze vakmensen voert een gedetailleerde inmeting uit en brengt alle specificaties in beeld."
  },
  {
    step: "03",
    title: "Project offerte",
    description: "U ontvangt een gedetailleerde offerte met een transparante prijsopbouw en projectspecificaties."
  },
  {
    step: "04",
    title: "Productie",
    description: "Uw kozijnen worden geproduceerd volgens ISO-normen met uitgebreide kwaliteitscontroles in elke fase."
  },
  {
    step: "05",
    title: "Uitlevering",
    description: "Na alle kwaliteitscontroles wordt Uw kozijn uitgeleverd met een kwaliteitsgarantie."
  }
];

---

<Layout title="Van Tilburg Kozijnen - Specialist in hoogwaardige kozijnen">
  <!-- Hero Section -->
  <section class="relative py-20 bg-primary-900 text-white overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-orange-500/30 via-primary-900 to-blue-900/50"></div>
      <div class="absolute inset-0 bg-[radial-gradient(#ffffff_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
    </div>

    <!-- Hero content -->
    <div class="container mx-auto px-4 relative z-20 pt-20">
      <div class="max-w-4xl">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
          Professionele kozijnoplossingen voor elk type bouwproject
        </h1>
        <p class="text-xl md:text-2xl text-gray-200 mb-8 max-w-2xl">
          Van één tot duizend stuks of meer, we bedienen alle vragen, elke keer.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="/contact" 
            class="btn btn-primary text-lg px-8 py-4"
          >
            Vraag een offerte aan
          </a>
          <a 
            href="/over-ons" 
            class="btn btn-outline-white text-lg px-8 py-4"
          >
            Ontdek ons verhaal
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {statistics.map((stat) => (
          <div class="text-center">
            <div class="text-4xl font-bold text-primary-600 mb-2">{stat.number}</div>
            <div class="text-lg font-semibold text-gray-900 mb-1">{stat.label}</div>
            <div class="text-gray-600">{stat.description}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Onze Diensten</h2>
        <p class="text-xl text-gray-600">
          Specialist in hoogwaardige kozijnoplossingen voor elke situatie
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-7xl mx-auto">
        {services.map((service) => (
          <div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300">
            <div class="h-16 w-16 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
              <Fragment set:html={service.icon} />
            </div>
            <h3 class="text-2xl font-semibold text-gray-900 mb-4">{service.title}</h3>
            <p class="text-gray-600 mb-6">{service.description}</p>
            <ul class="space-y-3">
              {service.features.map((feature) => (
                <li class="flex items-start">
                  <svg class="w-5 h-5 text-primary-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600">{feature}</span>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Work Process Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900 mb-4">Ons Werkproces</h2>
        <p class="text-xl text-gray-600">
          Van het eerste contact tot het eindresultaat, wij zorgen voor een zorgeloos proces
        </p>
      </div>

      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8">
          {workProcess.map((step, index) => (
            <div class="relative">
              <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
                <div class="text-4xl font-bold text-primary-600 mb-4">{step.step}</div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{step.title}</h3>
                <p class="text-gray-600">{step.description}</p>
              </div>
              {index < workProcess.length - 1 && (
                <div class="hidden md:block absolute top-1/2 -right-4 transform -translate-y-1/2">
                  <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .btn {
    @apply inline-flex items-center justify-center rounded-full font-medium transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2;
  }

  .btn-primary {
    @apply bg-primary-600 text-white hover:bg-primary-700 focus:ring-primary-500;
  }

  .btn-secondary {
    @apply bg-gray-100 text-gray-900 hover:bg-gray-200 focus:ring-gray-500;
  }

  .btn-outline-white {
    @apply border-2 border-white text-white hover:bg-white hover:text-primary-900;
  }
</style>

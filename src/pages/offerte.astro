---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const services = [
    'Nieuwbouw',
    'Renovatie',
    'Verbouw',
    'Onderhoud',
];
---

<Layout title="Offerte Aanvragen - Your Company">
    <Header />
    <main class="pt-20">
        <!-- Hero Section -->
        <section class="bg-bg-light py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-4xl mx-auto text-center">
                    <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-6">Offerte Aanvragen</h1>
                    <p class="text-xl text-text-light">
                        Vraag vrijblijvend een offerte aan voor uw project
                    </p>
                </div>
            </div>
        </section>

        <!-- Quote Form -->
        <section class="py-20">
            <div class="container mx-auto px-4">
                <div class="max-w-3xl mx-auto">
                    <form class="bg-white rounded-lg shadow-lg p-8">
                        <!-- Personal Information -->
                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-text-dark mb-6">Persoonlijke Gegevens</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label for="firstName" class="block text-sm font-medium text-text-dark mb-2">Voornaam</label>
                                    <input
                                        type="text"
                                        id="firstName"
                                        name="firstName"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    />
                                </div>
                                <div>
                                    <label for="lastName" class="block text-sm font-medium text-text-dark mb-2">Achternaam</label>
                                    <input
                                        type="text"
                                        id="lastName"
                                        name="lastName"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    />
                                </div>
                                <div>
                                    <label for="email" class="block text-sm font-medium text-text-dark mb-2">Email</label>
                                    <input
                                        type="email"
                                        id="email"
                                        name="email"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    />
                                </div>
                                <div>
                                    <label for="phone" class="block text-sm font-medium text-text-dark mb-2">Telefoon</label>
                                    <input
                                        type="tel"
                                        id="phone"
                                        name="phone"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    />
                                </div>
                            </div>
                        </div>

                        <!-- Project Information -->
                        <div class="mb-8">
                            <h2 class="text-2xl font-bold text-text-dark mb-6">Project Details</h2>
                            <div class="space-y-6">
                                <div>
                                    <label for="service" class="block text-sm font-medium text-text-dark mb-2">Type Dienst</label>
                                    <select
                                        id="service"
                                        name="service"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    >
                                        <option value="">Selecteer een dienst</option>
                                        {services.map(service => (
                                            <option value={service}>{service}</option>
                                        ))}
                                    </select>
                                </div>
                                <div>
                                    <label for="location" class="block text-sm font-medium text-text-dark mb-2">Projectlocatie</label>
                                    <input
                                        type="text"
                                        id="location"
                                        name="location"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    />
                                </div>
                                <div>
                                    <label for="description" class="block text-sm font-medium text-text-dark mb-2">Projectomschrijving</label>
                                    <textarea
                                        id="description"
                                        name="description"
                                        rows="4"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    ></textarea>
                                </div>
                                <div>
                                    <label for="timeline" class="block text-sm font-medium text-text-dark mb-2">Gewenste Timeline</label>
                                    <select
                                        id="timeline"
                                        name="timeline"
                                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-primary"
                                        required
                                    >
                                        <option value="">Selecteer een timeline</option>
                                        <option value="direct">Zo snel mogelijk</option>
                                        <option value="1-3months">Binnen 1-3 maanden</option>
                                        <option value="3-6months">Binnen 3-6 maanden</option>
                                        <option value="6-12months">Binnen 6-12 maanden</option>
                                        <option value="flexible">Flexibel</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div>
                            <button
                                type="submit"
                                class="w-full bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors"
                            >
                                Offerte Aanvragen
                            </button>
                            <p class="text-sm text-text-light mt-4 text-center">
                                We nemen binnen 2 werkdagen contact met u op.
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<script>
    // Form submission handling
    const form = document.querySelector('form');
    form?.addEventListener('submit', (e) => {
        e.preventDefault();
        // Add your form submission logic here
        alert('Bedankt voor uw aanvraag! We nemen zo spoedig mogelijk contact met u op.');
        form.reset();
    });
</script>

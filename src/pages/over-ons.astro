---

<Layout title="Over Ons | Van Tilburg Kozijnen">
  <div class="pt-20">
    <Breadcrumbs items={[{ title: "Over Ons", url: "/over-ons" }]} />
    
    <!-- Hero Section -->
    <section class="relative py-20 bg-primary-900 text-white overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-br from-orange-500/30 via-primary-900 to-blue-900/50"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#ffffff_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
      </div>
      
      <div class="relative container mx-auto px-4">
        <div class="max-w-4xl">
          <h1 class="text-5xl font-bold mb-6">
            Maak kennis met het meest gezellige team van Brabant!
          </h1>
          <p class="text-xl text-gray-200">
            Een familiebedrijf met meer dan 50 jaar ervaring in kozijnen
          </p>
        </div>
      </div>
    </section>

    <!-- Management Team Section -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ons Management Team</h2>
          <p class="text-xl text-gray-600">
            De drijvende kracht achter Van Tilburg Kozijnen
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {teamMembers.map((member) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="aspect-[4/5] relative">
                <img
                  src={member.image}
                  alt={member.name}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                <p class="text-primary-600 font-medium mb-4">{member.role}</p>
                <p class="text-gray-600">{member.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Extended Team Section -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ons Productieteam</h2>
          <p class="text-xl text-gray-600">
            De vakkundige professionals die uw kozijnen met precisie vervaardigen
          </p>
        </div>

        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {extendedTeam.slice(0, 3).map((member) => (
              <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="aspect-[4/5] relative">
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                  <p class="text-primary-600 font-medium">{member.role}</p>
                </div>
              </div>
            ))}
          </div>

          <div class="mt-12 text-center" x-data="{ showMore: false }">
            <button
              class="btn btn-primary"
              @click="showMore = !showMore"
              x-text="showMore ? 'Toon minder' : 'Bekijk hele team'"
            >
              Bekijk hele team
            </button>

            <div
              class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-8"
              x-show="showMore"
              x-transition
            >
              {extendedTeam.slice(3).map((member) => (
                <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                  <div class="aspect-[4/5] relative">
                    <img
                      src={member.image}
                      alt={member.name}
                      class="w-full h-full object-cover"
                    />
                  </div>
                  <div class="p-6">
                    <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                    <p class="text-primary-600 font-medium">{member.role}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Onze Geschiedenis</h2>
          <p class="text-xl text-gray-600">
            Een familiebedrijf met een rijke historie en een heldere toekomstvisie
          </p>
        </div>

        <div class="max-w-6xl mx-auto">
          <div class="relative">
            <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-gray-200"></div>

            <div class="space-y-16">
              {milestones.map((milestone, index) => (
                <div class="relative">
                  <div class={`flex items-center ${index % 2 === 0 ? 'flex-row' : 'flex-row-reverse'}`}>
                    <div class="flex-1">
                      <div class={`p-6 bg-white rounded-xl shadow-lg ${index % 2 === 0 ? 'mr-8' : 'ml-8'}`}>
                        <div class="text-primary-600 font-bold text-xl mb-2">{milestone.year}</div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-3">{milestone.title}</h3>
                        <p class="text-gray-600">{milestone.description}</p>
                      </div>
                    </div>
                    <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold text-xl border-4 border-white shadow-lg">
                      {milestone.year.slice(-2)}
                    </div>
                    <div class="flex-1"></div>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Certifications Section -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Garanties en Keurmerken</h2>
          <p class="text-xl text-gray-600">
            Wij staan voor kwaliteit en zekerheid. Al onze producten en diensten voldoen aan de hoogste kwaliteitseisen.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
          {certifications.map((cert) => (
            <div class="bg-white rounded-xl shadow-lg p-8">
              <div class="flex items-center mb-6">
                <img src={cert.image} alt={cert.name} class="h-16 w-auto mr-6" />
                <h3 class="text-2xl font-bold text-gray-900">{cert.name}</h3>
              </div>
              <p class="text-gray-600 mb-6">{cert.description}</p>
              {cert.features && (
                <ul class="space-y-3">
                  {cert.features.map((feature) => (
                    <li class="flex items-start">
                      <svg class="w-5 h-5 text-primary-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>
              )}
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

---
import Layout from '../layouts/Layout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';

const teamMembers = [
  {
    name: "Patrick van Tilburg",
    role: "Algemeen Directeur",
    description: "Met jarenlange ervaring leidt Patrick het bedrijf met passie en vakmanschap."
  },
  {
    name: "Norain van Tilburg",
    role: "Junior Directielid",
    description: "Als nieuwe generatie brengt Norain frisse ideeÃ«n en innovatie in het bedrijf."
  },
  {
    name: "Nordin van Tilburg",
    role: "Junior Directielid",
    description: "Nordin focust zich op de technische innovatie en toekomstvisie van het bedrijf."
  }
];

const extendedTeam = [
  {
    name: "John van den Broek",
    role: "Werkvoorbereiding"
  },
  {
    name: "Ivo Middeldorp",
    role: "Calculator"
  },
  {
    name: "Peter de Nijs",
    role: "Machinale"
  },
  {
    name: "Bjorna Geers",
    role: "Voormontage"
  },
  {
    name: "Patrick Goossens",
    role: "Spuiterij"
  },
  {
    name: "Niels Huijgen",
    role: "Afmontage"
  },
  {
    name: "Jeroen Wolst",
    role: "Afmontage"
  },
  {
    name: "Robin Gottheil",
    role: "Afmontage"
  }
];
---

<Layout title="Over Ons | Van Tilburg Kozijnen">
  <div class="pt-20">
    <Breadcrumbs items={[{ title: "Over Ons", url: "/over-ons" }]} />
    
    <!-- Hero Section -->
    <section class="relative py-20 bg-primary-900 text-white overflow-hidden">
      <div class="absolute inset-0">
        <div class="absolute -top-24 -right-24 w-96 h-96 rounded-full bg-gradient-to-br from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-96 h-96 rounded-full bg-gradient-to-tr from-orange-500/30 to-primary-600/0 blur-3xl"></div>
        <div class="absolute inset-0 bg-[radial-gradient(#fb923c_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
      </div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
            Van Tilburg <span class="text-gradient">Kozijnen</span>
          </h1>
          <p class="text-xl text-gray-200">
            Een familiebedrijf met meer dan 50 jaar ervaring in kozijnen
          </p>
        </div>
      </div>
    </section>

    <!-- Management Team Section -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ons Management Team</h2>
          <p class="text-xl text-gray-600">
            De drijvende kracht achter Van Tilburg Kozijnen
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {teamMembers.map((member) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="aspect-[4/5] relative">
                {member.name === "Patrick van Tilburg" ? (
                  <img
                    src="/team/patrick.jpg"
                    alt={`Foto van ${member.name}`}
                    class="w-full h-full object-cover"
                  />
                ) : (
                  <img
                    src={`https://placehold.co/400x500/e2e8f0/1e293b?text=${member.name.split(' ')[0]}`}
                    alt={`Foto van ${member.name}`}
                    class="w-full h-full object-cover"
                  />
                )}
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                <p class="text-primary-600 font-medium mb-4">{member.role}</p>
                <p class="text-gray-600">{member.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Extended Team Section -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-4">Ons Productieteam</h2>
          <p class="text-xl text-gray-600">
            De vakkundige professionals die uw kozijnen met precisie vervaardigen
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
          {extendedTeam.map((member) => (
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
              <div class="aspect-[4/5] relative">
                <img
                  src={`https://placehold.co/400x500/e2e8f0/1e293b?text=${member.name.split(' ')[0]}`}
                  alt={`Foto van ${member.name}`}
                  class="w-full h-full object-cover"
                />
              </div>
              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                <p class="text-primary-600 font-medium">{member.role}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .text-gradient {
    @apply bg-clip-text text-transparent bg-gradient-to-r from-orange-400 to-orange-600;
  }
</style>

const sectors = [
    'Alle sectoren',
    'Kantoren',
    'Appartementen',
    'Zorginstellingen',
    'Scholen',
    'Hotels',
    'Retail'
];
const sortOptions = [
    { value: 'recent', label: 'Meest Recent' },
    { value: 'budget-high', label: 'Hoogste Budget' },
    { value: 'budget-low', label: 'Laagste Budget' },
    { value: 'size', label: 'Grootste Oppervlakte' }
];
---

<PageLayout 
    title="Projecten & Referenties"
    breadcrumbs={[
        { text: 'Home', href: '/' },
        { text: 'Projecten', href: '/projecten' }
    ]}
>
    <!-- Filter Section -->
    <section class="py-8 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                <!-- Category Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Categorie</label>
                    <select class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
                        {categories.map((category) => (
                            <option value={category}>{category}</option>
                        ))}
                    </select>
                </div>

                <!-- Sector Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Sector</label>
                    <select class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
                        {sectors.map((sector) => (
                            <option value={sector}>{sector}</option>
                        ))}
                    </select>
                </div>

                <!-- Investment Range -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Investeringsrange</label>
                    <select class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
                        <option value="all">Alle bedragen</option>
                        <option value="0-500">€0 - €500K</option>
                        <option value="500-1000">€500K - €1M</option>
                        <option value="1000-2000">€1M - €2M</option>
                        <option value="2000+">€2M+</option>
                    </select>
                </div>

                <!-- Sort -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Sorteren op</label>
                    <select class="w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500">
                        {sortOptions.map((option) => (
                            <option value={option.value}>{option.label}</option>
                        ))}
                    </select>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Grid -->
    <section class="py-12">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {projects.map((project) => (
                    <article class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
                        <div class="relative h-64">
                            <img
                                src={project.imageUrl}
                                alt={project.title}
                                class="w-full h-full object-cover"
                            />
                            <div class="absolute top-4 right-4 bg-primary-600 text-white px-3 py-1 rounded-full text-sm">
                                {project.category}
                            </div>
                        </div>
                        
                        <div class="p-6">
                            <h3 class="text-2xl font-bold text-gray-900 mb-2">{project.title}</h3>
                            <p class="text-sm text-primary-600 mb-2">{project.location} | {project.year}</p>
                            <p class="text-gray-600 mb-4">{project.description}</p>
                            
                            <!-- Key Specs -->
                            <div class="grid grid-cols-2 gap-4 mb-4">
                                <div class="text-sm">
                                    <span class="text-gray-600">Oppervlakte:</span>
                                    <span class="font-medium text-gray-900 ml-1">{project.specs.oppervlakte}</span>
                                </div>
                                <div class="text-sm">
                                    <span class="text-gray-600">Kozijnen:</span>
                                    <span class="font-medium text-gray-900 ml-1">{project.specs.kozijnen}</span>
                                </div>
                                <div class="text-sm">
                                    <span class="text-gray-600">Doorlooptijd:</span>
                                    <span class="font-medium text-gray-900 ml-1">{project.specs.doorlooptijd}</span>
                                </div>
                                <div class="text-sm">
                                    <span class="text-gray-600">Investering:</span>
                                    <span class="font-medium text-gray-900 ml-1">{project.specs.investering}</span>
                                </div>
                            </div>

                            <!-- Results -->
                            <div class="mb-4">
                                <h4 class="text-sm font-semibold text-gray-900 mb-2">Resultaten:</h4>
                                <ul class="text-sm text-gray-600 space-y-1">
                                    {project.resultaten.map((resultaat) => (
                                        <li class="flex items-center">
                                            <svg class="w-4 h-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                            {resultaat}
                                        </li>
                                    ))}
                                </ul>
                            </div>

                            <!-- Testimonial -->
                            <blockquote class="border-l-4 border-primary-500 pl-4 mb-4 italic text-sm text-gray-600">
                                "{project.testimonial.quote}"
                                <footer class="mt-2 text-sm">
                                    <strong class="text-gray-900">{project.testimonial.auteur}</strong>
                                    <span class="text-gray-600"> - {project.testimonial.functie}</span>
                                </footer>
                            </blockquote>

                            <!-- Certifications -->
                            <div class="flex flex-wrap gap-2">
                                {project.certificeringen.map((cert) => (
                                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs">
                                        {cert}
                                    </span>
                                ))}
                            </div>

                            <a
                                href={`/projecten/${project.title.toLowerCase().replace(/ /g, '-')}`}
                                class="mt-4 inline-flex items-center text-primary-600 hover:text-primary-700"
                            >
                                Bekijk project details
                                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-primary-900 text-white">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h2 class="text-3xl font-bold mb-4">Klaar voor uw project?</h2>
            <p class="text-xl mb-8">
                Laat ons u helpen bij het realiseren van uw volgende project. 
                Onze experts staan klaar voor een vrijblijvend gesprek.
            </p>
            <a
                href="/voor-professionals#contact"
                class="inline-flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-primary-700 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10"
            >
                Plan een gesprek
            </a>
        </div>
    </section>
</PageLayout>


---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import B2BContactForm from '../../components/B2BContactForm.astro';

const features = [
    {
        title: "Hygiënisch",
        description: "Antibacteriële coating en eenvoudig te reinigen oppervlakken",
        icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
        </svg>`
    },
    {
        title: "Toegankelijk",
        description: "Voldoet aan NEN 1814 voor toegankelijkheid in de zorg",
        icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>`
    },
    {
        title: "Comfort",
        description: "Optimale isolatie voor een aangenaam binnenklimaat",
        icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>`
    },
    {
        title: "Veiligheid",
        description: "Extra veiligheidsvoorzieningen voor kwetsbare doelgroepen",
        icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>`
    }
];

const solutions = [
    {
        title: "Ziekenhuizen",
        description: "Specialistische kozijnoplossingen voor ziekenhuizen",
        items: [
            "Antibacteriële oppervlakken",
            "Brandwerende constructies",
            "Geluidswerend glas",
            "Automatische deursystemen"
        ]
    },
    {
        title: "Verzorgingstehuizen",
        description: "Comfort en veiligheid voor ouderenzorg",
        items: [
            "Drempelloze toegang",
            "Eenvoudige bediening",
            "Inbraakpreventie",
            "Onderhoudsarm"
        ]
    },
    {
        title: "Gezondheidscentra",
        description: "Praktische oplossingen voor zorginstellingen",
        items: [
            "Energiezuinig",
            "Daglichtoptimalisatie",
            "Ventilatiemogelijkheden",
            "Akoestisch comfort"
        ]
    }
];

const references = [
    {
        name: "Isala Ziekenhuis",
        description: "Renovatie 200+ kozijnen",
        result: "Hygiëne-certificering behaald"
    },
    {
        name: "Zorgcentrum De Linden",
        description: "Complete kozijnvervanging",
        result: "30% energiebesparing"
    },
    {
        name: "Medisch Centrum West",
        description: "Nieuwbouw gezondheidscentrum",
        result: "BREEAM Excellent"
    }
];

const certifications = [
    "NEN 1814 - Toegankelijkheid",
    "NEN-EN 1634 - Brandwerendheid",
    "ISO 14644 - Cleanroom geschikt",
    "SKG*** - Inbraakwerendheid",
    "KOMO - Kwaliteitsgarantie"
];
---

<Layout title="Zorg | Van Tilburg Kozijnen">
    <!-- Hero Section -->
    <section class="relative py-20 bg-primary-900 text-white overflow-hidden">
        <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-br from-orange-500/30 via-primary-900 to-blue-900/50"></div>
            <div class="absolute inset-0 bg-[radial-gradient(#ffffff_1px,transparent_1px)] [background-size:16px_16px] opacity-10"></div>
        </div>
        <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl font-bold tracking-tight sm:text-5xl md:text-6xl">
                    Zorgsector
                </h1>
                <p class="mt-6 max-w-2xl mx-auto text-xl text-gray-300">
                    Specialistische kozijnoplossingen voor ziekenhuizen, verzorgingstehuizen en gezondheidscentra
                </p>
            </div>
        </div>
    </section>

    <!-- Features Grid -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                {features.map((feature) => (
                    <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300">
                        <div class="text-primary-600" set:html={feature.icon} />
                        <h3 class="mt-4 text-xl font-bold text-gray-900">{feature.title}</h3>
                        <p class="mt-2 text-gray-600">{feature.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Solutions -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900">Onze Oplossingen</h2>
                <p class="mt-4 text-xl text-gray-600">
                    Specialistische kozijnoplossingen voor elke zorginstelling
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {solutions.map((solution) => (
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">{solution.title}</h3>
                        <p class="text-gray-600 mb-4">{solution.description}</p>
                        <ul class="space-y-2">
                            {solution.items.map((item) => (
                                <li class="flex items-center text-gray-600">
                                    <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    {item}
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Certifications -->
    <section class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900">Certificeringen</h2>
                <p class="mt-4 text-xl text-gray-600">
                    Onze oplossingen voldoen aan alle relevante zorgnormen
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
                {certifications.map((cert) => (
                    <div class="bg-gray-50 p-4 rounded-lg text-center">
                        <span class="text-gray-900 font-medium">{cert}</span>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- References -->
    <section class="py-16 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900">Referenties</h2>
                <p class="mt-4 text-xl text-gray-600">
                    Ontdek onze succesvolle zorgprojecten
                </p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {references.map((ref) => (
                    <div class="bg-white p-6 rounded-xl shadow-lg">
                        <h3 class="text-xl font-bold text-gray-900 mb-2">{ref.name}</h3>
                        <p class="text-gray-600 mb-4">{ref.description}</p>
                        <div class="flex items-center text-primary-600">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {ref.result}
                        </div>
                    </div>
                ))}
            </div>
            <div class="text-center mt-8">
                <a href="/projecten?sector=zorg" class="inline-flex items-center text-primary-600 hover:text-primary-700">
                    Bekijk alle zorgprojecten
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 bg-white">
        <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl font-bold text-gray-900">Start uw project</h2>
                <p class="mt-4 text-xl text-gray-600">
                    Neem contact op voor een vrijblijvend gesprek over uw zorgproject
                </p>
            </div>
            <B2BContactForm />
        </div>
    </section>
</Layout>

